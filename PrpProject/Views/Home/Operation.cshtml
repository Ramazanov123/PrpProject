<div class="col-md-4">
    <h3>Adding Wallet</h3>
    <form method="post" action="">
        <div class="form-group">
            <label for="select">Choose wallet</label>
            <select class="form-control" id="select" name="select">
                @foreach (var item in @ViewBag.Wallets)
                {
                    <option label="@item.Name" value="@item.Id" selected>@item.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="operation">Enter your @ViewBag.Operation</label>
            <input type="text" class="form-control" id="operation" name="Income" />
        </div>
        <input type="submit" value="Add" class="btn btn-success"/>
    </form>
</div>

